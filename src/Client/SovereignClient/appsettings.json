{
  "Sovereign": {
    "ConnectionOptions": {
      "Host": "127.0.0.1",
      "Port": 12820,
      "RestHost": "127.0.0.1",
      "RestPort": 8080,
      "RestTls": false
    },
    "AutoUpdaterOptions": {
      "UpdateServerUrl": "https://update.sovereignengine.com",
      "UpdateOnStartup": true,
      "PromptForUpdate": true
    },
    "DisplayOptions": {
      "ResolutionWidth": 1920,
      "ResolutionHeight": 1080,
      "Fullscreen": false,
      "MaxFramerate": 60,
      "Font": "NotoSans-SemiBold.ttf",
      "BaseFontSize": 16.0,
      "BaseScalingHeight": 768
    },
    "RendererOptions": {
      "TileWidth": 32,
      "RenderSearchSpacerX": 4.0,
      "RenderSearchSpacerY": 8.0
    },
    "TimeOptions": {
      "SecondsPerHour": 1800,
      "HoursPerDay": 24,
      "DaysPerWeek": 7,
      "WeeksPerMonth": 4,
      "MonthsPerSeason": 1,
      "SyncIntervalSeconds": 3
    },
    "DebugOptions": {
      "EnableEventLogging": false,
      "EventLogDirectory": "Logs"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Expressions"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": {
                  "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                  "template": "{@t:HH:mm:ss} {@l:u3} [{Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}] {@m}\n{@x}",
                  "theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
                }
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log.txt"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ],
    "Properties": {
      "Application": "SovereignClient"
    }
  }
}
