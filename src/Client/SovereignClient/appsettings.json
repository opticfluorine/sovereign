{
  "Sovereign": {
    "ConnectionOptions": {
      "Host": "127.0.0.1",
      "Port": 12820,
      "RestHost": "127.0.0.1",
      "RestPort": 8080,
      "RestTls": false
    },
    "AutoUpdaterOptions": {
      "UpdateServerUrl": "https://update.sovereignengine.com",
      "UpdateOnStartup": true,
      "PromptForUpdate": true
    },
    "DisplayOptions": {
      "ResolutionWidth": 1920,
      "ResolutionHeight": 1080,
      "Fullscreen": false,
      "MaxFramerate": 60,
      "Font": "NotoSans-SemiBold.ttf",
      "BaseFontSize": 16.0,
      "BaseScalingHeight": 768
    },
    "RendererOptions": {
      "TileWidth": 32,
      "RenderSearchSpacerX": 4.0,
      "RenderSearchSpacerY": 8.0
    },
    "DebugOptions": {
      "EnableEventLogging": false,
      "EventLogDirectory": "Logs"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": {
            "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
            "template": "{@t:HH:mm:ss} {@l:u3} [{Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}] {@m}\n{@x}"
          },
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log.txt",
          "buffered": true,
          "fileSizeLimitBytes": 134217728
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId",
      "WithExceptionDetails"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ],
    "Properties": {
      "Application": "SovereignClient"
    }
  }
}
