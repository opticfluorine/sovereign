{
  "Sovereign": {
    "ConnectionOptions": {
      "Host": "127.0.0.1",
      "Port": 12820,
      "RestHost": "127.0.0.1",
      "RestPort": 8080,
      "RestTls": false
    },
    "AutoUpdaterOptions": {
      "UpdateServerUrl": "https://update.sovereignengine.com",
      "UpdateOnStartup": true,
      "PromptForUpdate": true
    },
    "DisplayOptions": {
      "ResolutionWidth": 1920,
      "ResolutionHeight": 1080,
      "Fullscreen": false,
      "MaxFramerate": 60,
      "Font": "NotoSans-SemiBold.ttf",
      "IconFont": "OpenFontIcons.ttf",
      "BaseFontSize": 16.0,
      "BaseScalingHeight": 768
    },
    "RendererOptions": {
      "TileWidth": 32,
      "RenderSearchSpacerX": 4.0,
      "RenderSearchSpacerY": 8.0
    },
    "TimeOptions": {
      "SecondsPerHour": 75,
      "HoursPerDay": 24,
      "DaysPerWeek": 7,
      "WeeksPerMonth": 4,
      "MonthsPerSeason": 1,
      "SyncIntervalSeconds": 3
    },
    "MovementOptions": {
      "RequestIntervalTicks": 30,
      "MoveExpirationTicks": 40,
      "UpdateIntervalTicks": 10
    },
    "PerformanceOptions": {
      "SystemExecutorCount": 1,
      "YieldEventLoop": false,
      "YieldSystemLoop": true,
      "NetworkUpdateTimeMs": 15
    },
    "DebugOptions": {
      "EnableEventLogging": false,
      "EventLogDirectory": "Logs"
    },
    "DayNightOptions": {
      "GlobalLightSteps": [
        {
          "SecondOfDay": 0,
          "Red": 0.2,
          "Green": 0.2,
          "Blue": 0.4
        },
        {
          "SecondOfDay": 300,
          "Red": 0.2,
          "Green": 0.2,
          "Blue": 0.4
        },
        {
          "SecondOfDay": 375,
          "Red": 0.8,
          "Green": 0.5,
          "Blue": 0.5
        },
        {
          "SecondOfDay": 450,
          "Red": 0.8,
          "Green": 0.5,
          "Blue": 0.5
        },
        {
          "SecondOfDay": 525,
          "Red": 1.0,
          "Green": 1.0,
          "Blue": 1.0
        },
        {
          "SecondOfDay": 1275,
          "Red": 1.0,
          "Green": 1.0,
          "Blue": 1.0
        },
        {
          "SecondOfDay": 1350,
          "Red": 0.8,
          "Green": 0.5,
          "Blue": 0.5
        },
        {
          "SecondOfDay": 1425,
          "Red": 0.8,
          "Green": 0.5,
          "Blue": 0.5
        },
        {
          "SecondOfDay": 1500,
          "Red": 0.2,
          "Green": 0.2,
          "Blue": 0.4
        }
      ]
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Expressions"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": {
                  "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                  "template": "{@t:HH:mm:ss} {@l:u3} [{Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}] {@m}\n{@x}",
                  "theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
                }
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log.txt"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ],
    "Properties": {
      "Application": "SovereignClient"
    }
  }
}
