{
  "Sovereign": {
    "NetworkOptions": {
      "NetworkInterfaceIPv4": "0.0.0.0",
      "NetworkInterfaceIPv6": "::0",
      "Host": "localhost",
      "Port": 12820,
      "RestHostname": "127.0.0.1",
      "RestPort": 8080,
      "PingIntervalMs": 10000,
      "ConnectionTimeoutMs": 30000,
      "EntitySyncBatchSize": 16
    },
    "DatabaseOptions": {
      "DatabaseType": "Sqlite",
      "Host": "Data/sovereign.db",
      "Port": 5432,
      "Database": "sovereign",
      "Username": "",
      "Password": "",
      "Pooling": true,
      "PoolSizeMin": 1,
      "PoolSizeMax": 100,
      "SyncIntervalSeconds": 60,
      "CreateIfMissing": true
    },
    "NewPlayersOptions": {
      "AdminByDefault": true
    },
    "AccountsOptions": {
      "MaxFailedLoginAttempts": 10,
      "LoginDenialPeriodSeconds": 1800,
      "MinimumPasswordLength": 8,
      "HandoffPeriodSeconds": 30
    },
    "ScriptingOptions": {
      "ScriptDirectory": "Data/Scripts",
      "MaxDirectoryDepth": 5
    },
    "RuntimeOptions": {
      "WindowsServiceName": "Sovereign Server"
    },
    "TimeOptions": {
      "SecondsPerHour": 75,
      "HoursPerDay": 24,
      "DaysPerWeek": 7,
      "WeeksPerMonth": 4,
      "MonthsPerSeason": 1,
      "SyncIntervalSeconds": 3
    },
    "DebugOptions": {
      "EnableEventLogging": false,
      "EventLogDirectory": "Logs"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Async",
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Expressions"
    ],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "formatter": {
                  "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                  "template": "{@t:HH:mm:ss} {@l:u3} [{Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}] {@m}\n{@x}",
                  "theme": "Serilog.Templates.Themes.TemplateTheme::Code, Serilog.Expressions"
                }
              }
            },
            {
              "Name": "File",
              "Args": {
                "formatter": {
                  "type": "Serilog.Templates.ExpressionTemplate, Serilog.Expressions",
                  "template": "{@t:HH:mm:ss} {@l:u3} [{Substring(SourceContext, LastIndexOf(SourceContext, '.') + 1)}] {@m}\n{@x}"
                },
                "path": "Logs/log.txt"
              }
            }
          ]
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithExceptionDetails"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ],
    "Properties": {
      "Application": "SovereignServer"
    }
  }
}
